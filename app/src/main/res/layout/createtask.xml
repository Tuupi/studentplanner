<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogbkg">

    <!--    <ImageView-->
    <!--        android:layout_width="70dp"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:src="@drawable/round_remove_24"-->
    <!--        android:layout_gravity="center|top"-->
    <!--        android:scaleType="centerCrop"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/createTaskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:text="Create Task"
            android:padding="8dp"
            android:textColor="@color/darkest_blue"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:textSize="25dp"
            android:fontFamily="@font/poppins_semibold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/baseline_clear_24"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="8dp"
            android:id="@+id/cancelButton"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTask"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/TaskNameHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task :"
            android:textFontWeight="100"
            android:fontFamily="@font/poppins"/>


        <EditText
            android:id="@+id/TaskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:hint="Task Name"
            android:fontFamily="@font/poppins"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCourse"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/courseNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course :"
            android:textFontWeight="100"
            android:fontFamily="@font/poppins"/>


        <EditText
            android:id="@+id/CourseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:hint="Course Name"
            android:fontFamily="@font/poppins"/>

    </LinearLayout><LinearLayout
    android:id="@+id/linearDate"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/dateHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date :"
        android:textFontWeight="100"
        android:fontFamily="@font/poppins"/>


    <EditText

        android:id="@+id/Date"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="DD-MM-YYYY"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fontFamily="@font/poppins"/>

</LinearLayout>

    <Button
        android:id="@+id/idBtnPickDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:text="Pick Date"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_medium"/>

    <Button
        android:id="@+id/createTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_medium"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</LinearLayout>